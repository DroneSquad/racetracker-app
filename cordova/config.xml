<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dronesquad.mobile" version="3.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Drone Squad</name>
    <description>
        Drone Squad Mobile App
    </description>
    <content src="/index.html" />
    <preference name="BackgroundColor" value="0xff26687f" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#15576e" />
    <preference name="HeaderColor" value="#26687f" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <platform name="android">
        <hook src="hooks/build-android.sh" type="before_prepare" />
        <access origin="*" />
        <allow-navigation href="" />
        <allow-intent href="*" />
        <allow-intent href="market:*" />
        <splash src="/splash.png" />
        <icon src="/icon.png" />
    </platform>
    <platform name="ios">
        <hook src="hooks/build-ios.sh" type="before_prepare" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <engine name="browser" spec="~4.1.0" />
    <plugin name="cordova-plugin-ble-central" spec="^1.1.4">
        <variable name="BLUETOOTH_USAGE_DESCRIPTION" value="Allows app to communicate with the TBS Racetracker" />
    </plugin>
    <plugin name="cordova-plugin-console" spec="^1.0.7" />
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-headercolor" spec="^1.0.0" />
    <plugin name="cordova-plugin-statusbar" spec="^2.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="onesignal-cordova-plugin" spec="^2.2.0" />
</widget>
